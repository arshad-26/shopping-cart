@inherits LayoutComponentBase

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleSidebar" />
    </MudAppBar>
    <MudDrawer @bind-Open="_sideBarOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Color="Color.Dark" Style="margin-top:10px; margin-left:15px;">Shopping App</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="Icons.Filled.Home">Categories</MudNavLink>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="Icons.Filled.Home">Items</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<MudThemeProvider />
<MudSnackbarProvider />

@code{
    public bool _sideBarOpen { get; set; }

    private void ToggleSidebar()
    {
        _sideBarOpen = !_sideBarOpen;
    } 
}

